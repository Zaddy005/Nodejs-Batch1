<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
</head>
<body>
    <h1>Welcome to EJS Lesson</h1>

    <% const greet = "Welcome to EJS Lesson" %>

    <nav>
        <div>
            <a href="/"> Home Page</a>
            <p><%= greet %></p>
        </div>
        <ul>
            <li><a href="/" >Home</a></li>
            <li><a href="/about" >About</a></li>
            <li><a href="/posts/create" >Create</a></li>
        </ul>
    </nav>

    <div>
        <h2>ALl  Posts</h2>



        <% if(posts.length > 0){ %>
                <% posts.forEach((post)=>{ %>
                    <h3> <%= post.title %> </h3>
                    <small> <%= post.subtitle %> </small>
                    <p> <%= post.body %> </p>
                <% }) %>

            <% }else{ %>
                <p> There are no blog posts to display</p>
            <% } %>

    </div>

</body>
</html>